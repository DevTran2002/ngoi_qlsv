<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="chart_render_template">

        <div class="vh-100 overflow-auto px-5 bg-muted" style = "background-color:#f5f7fa">

            <div id="root" class = "my-5">
                <div class = "information_dashboard w-100 ms-4">Thông tin chung</div>
                <div class="container mt-4">
                    <div class="row align-items-stretch">
                        <div class="c-dashboardInfo col-lg-3 col-md-6">
                            <div class="wrap">
                                <img width="50" height="50" src="https://img.icons8.com/nolan/64/map.png" alt="map"/>
                                <h4 class="heading heading5 hind-font medium-font-weight c-dashboardInfo__title">Vùng trồng
                                </h4>
                                <span class="hind-font caption-12 c-dashboardInfo__count">10</span>
                            </div>
                        </div>
                        <div class="c-dashboardInfo col-lg-3 col-md-6">
                            <div class="wrap">
                                <img width="50" height="50" src="https://img.icons8.com/nolan/64/company.png" alt="company"/>
                                <h4 class="heading heading5 hind-font medium-font-weight c-dashboardInfo__title">Pháp nhân</h4>
                                <span class="hind-font caption-12 c-dashboardInfo__count">6</span>
                                <!-- <span class="hind-font caption-12 c-dashboardInfo__subInfo">Last month: €30</span> -->
                            </div>
                        </div>
                        <div class="c-dashboardInfo col-lg-3 col-md-6">
                            <div class="wrap">
                                <img width="50" height="50" src="https://img.icons8.com/nolan/64/soil.png" alt="soil"/>
                                <h4 class="heading heading5 hind-font medium-font-weight c-dashboardInfo__title">Loại cây</h4>
                                <span class="hind-font caption-12 c-dashboardInfo__count">8</span>
                            </div>
                        </div>
                        <div class="c-dashboardInfo col-lg-3 col-md-6">
                            <div class="wrap">
                                <img width="50" height="50" src="https://img.icons8.com/nolan/64/guest-male.png" alt="guest-male"/>
                                <h4 class="heading heading5 hind-font medium-font-weight c-dashboardInfo__title">Nhân viên</h4>
                                <span class="hind-font caption-12 c-dashboardInfo__count">17</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="detail_dashboard my-5">
                <div class = "information_dashboard w-100">Thông tin chi tiết</div>
                <div class="table_dashboard">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">First</th>
                                <th scope="col">Last</th>
                                <th scope="col">Handle</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <th scope="row">1</th>
                                <td>Mark</td>
                                <td>Otto</td>
                                <td>@mdo</td>
                            </tr>
                            <tr>
                                <th scope="row">2</th>
                                <td>Jacob</td>
                                <td>Thornton</td>
                                <td>@fat</td>
                            </tr>
                            <tr>
                                <th scope="row">3</th>
                                <td colspan="2">Larry the Bird</td>
                                <td>@twitter</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>

            <div class="chart_dashboard mx-4">
                <div class = "information_dashboard w-100">Biểu đồ</div>
                <div class="canvas_chart row">
                    <div class="col-xl-8 item">
                        <div class="wrap">
                            <canvas id="chart_total_quantity" />
                        </div>
                    </div>
                    <div class="col-xl-4 item">
                        <div class="wrap">
                            <canvas id="chart_example"/>
                        </div>
                        <div class="wrap mt-2">
                            <canvas id="chart_example1"/>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </t>
</templates>
